    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="removeModelHeader">Modal title</h5>
            </div>
            <div class="modal-body">
                <p id="removeModelBody"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="removeModelButton">Agree</button>
            </div>
        </div>
    </div>
</div>

