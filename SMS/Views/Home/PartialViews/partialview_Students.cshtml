@model StudentPage

<div>
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th scope="col" class="text-center">Id</th>
                <th scope="col" class="text-center">Firstname</th>
                <th scope="col" class="text-center">Surname</th>
                <th scope="col" class="text-center">DOB</th>
                <th scope="col" class="text-center">Gender</th>
                <th scope="col" class="text-center">Address</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subitems in Model.DataFetched)
            {
                <tr>
                    <th scope="row" class="text-center">@subitems.Id</th>
                    <td class="text-center">@subitems.FirstName</td>
                    <td class="text-center">@subitems.SurName</td>
                    <td class="text-center">@subitems.DOB.ToString("dd-MM-yyyy")</td>
                    <td class="text-center">@subitems.Gender</td>
                    <td class="text-center">@subitems.Address1</td>
                    <td class="text-center">
                        <a class="btn btn-primary" onclick="openLinkedCoursesModel(@subitems.Id,'CoursePerStudent','@subitems.FirstName @subitems.SurName')">View Courses</a>
                        <a class="btn btn-warning" onclick="openModel('studentsModel','Edit',@subitems.Id)">Edit</a>
                        <a class="btn btn-danger" onclick="openRemoveModel('studentsModel','@subitems.Id','@subitems.FirstName')">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
     <div id="paginationContainer">
        <p id="Student_Pages" hidden>@Model.NumberOfPages</p>
        <p id="Student_Current" hidden>@Model.CurrentPage</p>
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
            </ul>
        </nav>
    </div>
</div>
