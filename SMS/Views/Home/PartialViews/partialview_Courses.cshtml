@model List<Courses>

<div class="d-flex justify-centent-center align-items-center">
    @if(Model != null)
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th scope="col" class="text-center">Course Code</th>
                    <th scope="col" class="text-center">Course Name</th>
                    <th scope="col" class="text-center">Teacher Name</th>
                    <th scope="col" class="text-center">Start Date</th>
                    <th scope="col" class="text-center">End Date</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <th scope="row" class="text-center">@item.CourseCode</th>
                        <td class="text-center">@item.CourseName</td>
                        <td class="text-center">@item.TeacherName</td>
                        <td class="text-center">@item.StartDate.ToString("dd/MM/yyyy")</td>
                        <td class="text-center">@item.EndDate.ToString("dd/MM/yyyy")</td>
                        <td class="text-center">
                            <a class="btn btn-primary" onclick="openLinkedCoursesModel(@item.Id,'StudentPerCourse','@item.CourseName')">View Students</a>
                            <a class="btn btn-warning" onclick="openModel('coursesModel','Edit',@item.Id)">Edit</a>
                            <a class="btn btn-danger" onclick="openRemoveModel('coursesModel','@item.Id','@item.CourseName')">Remove</a>
                        </td>
                    </tr>
                }
                
            </tbody>
        </table>
    }
    else
    {
        <h2>No Data To Show</h2>
    }

</div>